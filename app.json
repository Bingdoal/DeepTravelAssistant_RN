{
  "expo": {
    "name": "DeepTravelAssistant_RN",
    "slug": "DeepTravelAssistant_RN",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "deeptravelassistantrn",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      // 這裡放 Info.plist 權限敘述
      "infoPlist": {
        "NSCameraUsageDescription": "需要使用相機拍攝菜單、景點與商品照片，協助說明內容。",
        "NSPhotoLibraryUsageDescription": "需要讀取您的照片，用來上傳菜單、景點與商品圖片給 AI 分析。",
        "NSPhotoLibraryAddUsageDescription": "需要儲存處理後的圖片到相簿（如果您選擇另存圖片）。",
        "NSLocationWhenInUseUsageDescription": "需要取得您目前的位置，幫助提供與當地相關的歷史、文化與店家資訊。",
        // 如果之後有做檔案選擇器（非相簿），也可以加這段描述：
        "UIFileSharingEnabled": true
      }
    },
    "android": {
      "softwareKeyboardLayoutMode": "resize",
      "adaptiveIcon": {
        "backgroundColor": "#E6F4FE",
        "foregroundImage": "./assets/images/android-icon-foreground.png",
        "backgroundImage": "./assets/images/android-icon-background.png",
        "monochromeImage": "./assets/images/android-icon-monochrome.png"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "package": "com.yourcompany.deeptravelassistant",
      // 明確宣告會用到的權限
      "permissions": [
        "CAMERA",                // 拍照
        "READ_EXTERNAL_STORAGE", // 讀取照片 / 檔案
        "WRITE_EXTERNAL_STORAGE",// 部分舊版裝置需要（新版本會被忽略或轉換）
        "ACCESS_FINE_LOCATION",  // 精準定位
        "ACCESS_COARSE_LOCATION" // 粗略定位
      ]
    },
    "web": {
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff",
          "dark": {
            "backgroundColor": "#000000"
          }
        }
      ],
      "expo-secure-store"
    ],
    "experiments": {
      "typedRoutes": true,
      "reactCompiler": true
    }
  }
}
